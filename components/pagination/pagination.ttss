/* components/pagination/pagination.ttss */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
}

.page-numbers {
    flex: 1;
    display: flex;
}

.input-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    margin: 0 10rpx;
}

.ttui-input {
    width: 80rpx;
    height: 60rpx;
    font-size: 22rpx;
    text-align: center;
    background-color: #f0f2f5;
    border-radius: 4rpx;
    margin-right: 10rpx;
}

button {
    padding: 0;
    line-height: 0;
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
    font-size: 22rpx;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 5rpx;
    background-color: #f0f2f5;
    border: none;
}

button.active {
    color: white;
    background-color: #0000de;
}

button::after {
    content: " ";
    border: unset;
}